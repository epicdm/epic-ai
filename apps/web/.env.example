# Google (YouTube + Ads)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="${NEXT_PUBLIC_APP_URL}/api/auth/callback/google"

# TikTok
TIKTOK_CLIENT_KEY=""
TIKTOK_CLIENT_SECRET=""
TIKTOK_CALLBACK_URL="${NEXT_PUBLIC_APP_URL}/api/auth/callback/tiktok"

# Ad Platforms
META_ADS_ACCESS_TOKEN=""
GOOGLE_ADS_DEVELOPER_TOKEN=""
GOOGLE_ADS_CLIENT_ID=""
GOOGLE_ADS_CLIENT_SECRET=""

# LiveKit (Voice AI - Phase 2)
LIVEKIT_URL=""
LIVEKIT_API_KEY=""
LIVEKIT_API_SECRET=""

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# Token Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")

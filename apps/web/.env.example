# ===========================================
# EPIC AI - Environment Variables
# ===========================================

# Database (DigitalOcean Managed PostgreSQL)
DATABASE_URL="postgresql://user:password@host:25060/epic_ai?sslmode=require"

# Redis (DigitalOcean Managed Redis) - for job queues
REDIS_URL="rediss://default:password@host:25061"

# Clerk Authentication
CLERK_SECRET_KEY=""
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# OpenAI (Content Generation)
OPENAI_API_KEY=""

# Stripe (Billing)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# DigitalOcean Spaces (Media Storage)
DO_SPACES_KEY=""
DO_SPACES_SECRET=""
DO_SPACES_BUCKET="epic-ai-media"
DO_SPACES_REGION="nyc3"
DO_SPACES_ENDPOINT="https://nyc3.digitaloceanspaces.com"
DO_SPACES_CDN_ENDPOINT="https://epic-ai-media.nyc3.cdn.digitaloceanspaces.com"

# Social Platform APIs (Native Integration)
# X/Twitter
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""
TWITTER_CALLBACK_URL="${NEXT_PUBLIC_APP_URL}/api/auth/callback/twitter"

# LinkedIn
LINKEDIN_CLIENT_ID=""

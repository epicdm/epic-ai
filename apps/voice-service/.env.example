# Epic AI Voice Service - Environment Variables

# Server Configuration
PORT=8000
FLASK_DEBUG=false
LOG_LEVEL=INFO

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# Magnus Billing Configuration
MAGNUS_BILLING_API_URL=https://api.magnus-billing.com
MAGNUS_BILLING_API_KEY=your-magnus-api-key
MAGNUS_BILLING_ACCOUNT_ID=your-account-id

# Database (shared with Epic AI)
DATABASE_URL=postgresql://user:password@localhost:5432/epic_ai

# Redis (for session/cache if needed)
REDIS_URL=redis://localhost:6379

# OpenAI (for agent responses)
OPENAI_API_KEY=sk-your-openai-key
